{
    "name": "mcp-new",
    "version": "1.2.0",
    "description": "CLI generator for MCP servers. Like create-react-app, but for MCP.",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "mcp-new": "./bin/mcp-new.js"
    },
    "files": [
        "dist",
        "bin",
        "templates"
    ],
    "scripts": {
        "dev": "tsup src/index.ts --watch --format esm",
        "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
        "test": "vitest",
        "test:run": "vitest run",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "cli",
        "generator",
        "anthropic",
        "claude"
    ],
    "author": "Dinmukhanbet Aizharykov <dimashaijarikov@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/d1maash/mcp-new#readme",
    "bugs": {
        "url": "https://github.com/d1maash/mcp-new/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/d1maash/mcp-new.git"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.30.0",
        "@modelcontextprotocol/sdk": "^1.0.0",
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "ejs": "^3.1.10",
        "execa": "^8.0.0",
        "fs-extra": "^11.2.0",
        "inquirer": "^9.2.0",
        "ora": "^8.0.0",
        "yaml": "^2.4.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/ejs": "^3.1.0",
        "@types/fs-extra": "^11.0.0",
        "@types/inquirer": "^9.0.0",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.57.0",
        "prettier": "^3.2.0",
        "tsup": "^8.0.0",
        "typescript": "^5.4.0",
        "vitest": "^1.6.0"
    }
}