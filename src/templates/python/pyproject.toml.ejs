[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "<%= name %>"
version = "1.0.0"
description = "<%= description || 'MCP Server generated by create-mcp-server' %>"
readme = "README.md"
license = "MIT"
requires-python = ">=3.10"
dependencies = [
    "mcp>=1.0.0",
]

[project.scripts]
<%= name %> = "src.server:main"

[tool.hatch.build.targets.wheel]
packages = ["src"]
